<h3> Top 3 Highest-Scoring Universities </h3>

<% if session[:user_id] %>
  <h1><%= @user.name %></h1>
  <h2>Email: <%= @user.email %></h2>
  <h2>Facebook UID: <%= @user.uid %></h2>
  <img src="<%= @user.image %>">
<% else %>
  <%= link_to('Log in with Facebook!', '/auth/facebook') %>
<% end %>

<% @universities.each do |university| %>
    <h4>
    Name: <%=  university.name %><br>
    Zip Code: <%=  university.address %><br>
    Score: 
    <% if university.reviews.size == 0 %>
        To Be Scored
    <% else %>
        <%= university.average_score %>
    <% end %><br>
    <%= link_to "Click Here to See All Reviews", university_reviews_path(university.id) %>
    <%= link_to "Click Here to Add A Review", new_university_review_path(university.id) %>
    </h4>
<% end %>