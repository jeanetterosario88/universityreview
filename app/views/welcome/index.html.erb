
<% if session[:user_id] %>
  <h2>Hello <%= @user.username %>!</h2>
  <h3>Welcome Back to the University Review Forum!</h3>

  <br/>
<h3> Top 3 Highest-Scoring Universities </h3>

<% @universities.each do |university| %>
    <h4>
    <div class="card-body">
    <h4 class="card-name">Name: <%=  university.name %></h4> 
    <p class="card-address">Zip Code: <%=  university.address %><br>
    Score: 
    <% if university.reviews.size == 0 %>
        To Be Scored
    <% else %>
        <%= university.average_score %>
    <% end %><br>
    <%= link_to "Click Here to See All Reviews", university_reviews_path(university.id) %> ||
    <%= link_to "Click Here to Add A Review", new_university_review_path(university.id) %></p>
    </h4>
<% end %>

<% else %>

<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-4">Welcome to the University Review Forum!</h1>
    <p class="lead">Your Secret Weapon in the University Admissions Process!</p>
    <p class="lead">Get Honest Reviews From Current Students and Alumni</p>
  </div>
</div>

<% end %>