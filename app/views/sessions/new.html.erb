<h3><% if flash[:error] %>
<div class="error"><%= flash[:error] %></div>
<% end %></h3>


<%= form_tag('/sessions', method: :post) do %>

    <div class="form-group">
      <%= label_tag(:username, "Your username:") %>
      <%= text_field_tag(:username) %>
    </div>

    <div class="form-group">
      <%= label_tag(:password, "Your password:") %>
      <%= password_field_tag(:password) %>
    </div>
  
    <div class="actions">
      <%= submit_tag("Sign In", class: 'btn btn-primary') %>
    </div>
    </div>
  
  <% end %> 

  OR: <%= link_to "Sign Up Here", "/users/new" %>